@page
@model SIRHCoreWeb.Areas.SIRH.Pages.Incidents.CreateModel
@{Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <link href="~/css/pages/wizard/wizard-2.css" rel="stylesheet" type="text/css" />
    <div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">
        <div class="kt-heading kt-heading--md">
            <center><h1><font color="#273746"> Créer Un Incident </font></h1> </center>
        </div>
        <div class="kt-portlet">
            <div class="kt-portlet__body kt-portlet__body--fit">
                <div class="kt-grid  kt-wizard-v2 kt-wizard-v2--white" id="kt_wizard_v2" data-ktwizard-state="step-first">
                    <div class="kt-grid__item kt-wizard-v2__aside">

                        <div class="kt-wizard-v2__nav">
                            <div class="kt-wizard-v2__nav-items kt-wizard-v2__nav-items--clickable">
                                <div class="kt-wizard-v2__nav-item" data-ktwizard-type="step" data-ktwizard-state="current">
                                    <div class="kt-wizard-v2__nav-body">
                                        <div class="kt-wizard-v2__nav-icon">
                                            <i class="flaticon2-paper"></i>
                                        </div>
                                        <div class="kt-wizard-v2__nav-label">
                                            <div class="kt-wizard-v2__nav-label-title">
                                                1. Ajouter Nouveau Incident
                                            </div>
                                            <div class="kt-wizard-v2__nav-label-desc">

                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>

                    <div class="kt-grid__item kt-grid__item--fluid kt-wizard-v2__wrapper">
                        <div class="kt-form" id="kt_form">
                            <!--begin: Form Wizard Step 1-->
                            <div class="kt-wizard-v2__content" data-ktwizard-type="step-content" data-ktwizard-state="current">
                                <div class="kt-heading kt-heading--md">Remplir le formulaire</div>
                                <div class="kt-form__section kt-form__section--first">
                                    <div class="kt-wizard-v2__form">
                                        <div class="row">
                                            <div class="col-xl-6">
                                                <div class="form-group">
                                                    <label>Commentaire </label>
                                                    @Html.TextAreaFor(model => model.Incident.Description, 5, 40, new { @class = "form-control", @name = "desc", @id = "comm_col" })
                                                    @Html.ValidationMessageFor(model => model.Incident.Description, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xl-6">
                                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                <div class="form-group">

                                                    <label>Date de début <i class="fa fa-calendar"></i> </label>
                                                    @Html.EditorFor(model => model.Incident.DateCreation, new { htmlAttributes = new { @class = "form-control", @name = "DateCre", @id = "DateCre", @required = "Date de Creation " } })
                                                    @Html.ValidationMessageFor(model => model.Incident.DateCreation, "", new { @class = "text-danger" })

                                                </div>
                                            </div>
                                            <div class="col-xl-6">
                                                <div class="form-group">
                                                    <label>Date de fin <i class="fa fa-calendar"></i> </label>
                                                    @Html.EditorFor(model => model.Incident.DateReglage, new { htmlAttributes = new { @class = "form-control", @name = "DateReg", @id = "DateReg", @required = "Date de reglage" } })
                                                    @Html.ValidationMessageFor(model => model.Incident.DateReglage, "", new { @class = "text-danger" })


                                                </div>

                                            </div>

                                            <div class="col-xl-6">
                                                <div class="form-group">
                                                    <label>Crée Par:</label>
                                                    @Html.EditorFor(model => model.Incident.Creepar, new { htmlAttributes = new { @class = "form-control", @name = "creepar", @id = "creepar", @required = "Crée par" } })
                                                    @Html.ValidationMessageFor(model => model.Incident.Creepar, "", new { @class = "text-danger" })

                                                </div>
                                            </div>


                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="kt-wizard-v2__content" data-ktwizard-type="step-content">
                                <div class="kt-heading kt-heading--md">validation</div>
                                <div class="kt-form__section kt-form__section--first">
                                    <div class="kt-wizard-v2__review">
                                        <div class="kt-wizard-v2__review-item">
                                            <div class="kt-wizard-v2__review-title">
                                                Ajouter Incident
                                            </div>
                                            <div class="kt-wizard-v2__review-content" id="inf_gen">

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="kt-form__actions">

                                <button class="btn btn-success btn-md btn-tall btn-wide kt-font-bold kt-font-transform-u" data-ktwizard-type="submit">
                                    envoyer
                                </button>
                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
