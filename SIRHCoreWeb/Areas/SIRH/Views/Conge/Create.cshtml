@model SIRHCoreDomain.Conge

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @*Html.Raw(TempData["msg"])*@
