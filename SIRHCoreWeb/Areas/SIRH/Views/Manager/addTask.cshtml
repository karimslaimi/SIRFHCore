@model SIRHCoreDomain.Taches

@{
    ViewData["Title"] = "addTask";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card card-custom">
    <div class="card-header">
        <h3 class="card-title">
            Ajouter une tache
        </h3>
        <div class="card-toolbar">
            <div class="example-tools justify-content-center">
                <span class="example-toggle" data-toggle="tooltip" title="View code"></span>
                <span class="example-copy" data-toggle="tooltip" title="Copy code"></span>
            </div>
        </div>
    </div>
    <!--begin::Form-->
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-theme-6" })
        <div class="card-body">

            <div class="form-group">
                <label>Titre</label>

                @Html.EditorFor(model => model.title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.title, "", new { @class = "invalid-feedback" })

            </div>
            <div class="form-group ">
                <label class="">Description</label>


                @Html.TextAreaFor(model => model.description,5, 100, new { @class = "form-control"})

            </div>
         <input name="projid" hidden="hidden" value="@ViewBag.project"/>

        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary mr-2">Ajouter</button>
            <button type="reset" class="btn btn-secondary">Annuler</button>
        </div>
    }

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
