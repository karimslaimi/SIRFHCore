@model SIRHCoreDomain.NoteDeFrais

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @*Html.Raw(TempData["msg"])*@
<link href="~/css/pages/wizard/wizard-2.css" rel="stylesheet" type="text/css" />

<!--end::Page Custom Styles -->





<div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">
    <div class="kt-heading kt-heading--md">
        <center><h1><font color="#273746"> Modifier votre note de frais </font></h1> </center>
    </div>
    <div class="kt-portlet">
        <div class="kt-portlet__body kt-portlet__body--fit">
            <div class="kt-grid  kt-wizard-v2 kt-wizard-v2--white" id="kt_wizard_v2" data-ktwizard-state="step-first">
                <div class="kt-grid__item kt-wizard-v2__aside">

                    <!--begin: Form Wizard Nav -->
                    <div class="kt-wizard-v2__nav">

                        <!--doc: Remove "kt-wizard-v2__nav-items--clickable" class and also set 'clickableSteps: false' in the JS init to disable manually clicking step titles -->
                        <div class="kt-wizard-v2__nav-items kt-wizard-v2__nav-items--clickable">
                            <div class="kt-wizard-v2__nav-item" data-ktwizard-type="step" data-ktwizard-state="current">
                                <div class="kt-wizard-v2__nav-body">
                                    <div class="kt-wizard-v2__nav-icon">
                                        <i class="fa fa-pen"></i>
                                    </div>
                                    <div class="kt-wizard-v2__nav-label">
                                        <div class="kt-wizard-v2__nav-label-title">
                                            1. Modifier la note de frais
                                        </div>
                                        <div class="kt-wizard-v2__nav-label-desc">

                                        </div>
                                    </div>
                                </div>
                            </div>


                        </div>
                    </div>

                    <!--end: Form Wizard Nav -->
                </div>
                <div class="kt-grid__item kt-grid__item--fluid kt-wizard-v2__wrapper">
                    <!--begin: Form Wizard Form-->
                    <div class="kt-form" id="kt_form">
                        <!----form class="kt-form" action="/Home/InsertUser" id="kt_form"-->
                        <!--begin: Form Wizard Step 1-->
                        <div class="kt-wizard-v2__content" data-ktwizard-type="step-content" data-ktwizard-state="current">
                            <div class="kt-heading kt-heading--md">Modifier vos données</div>
                            <div class="kt-form__section kt-form__section--first">
                                <div class="kt-wizard-v2__form">
                                    @if (TempData.ContainsKey("msg"))
                                    {
                                    <div class="alert alert-warning alert-dismissible "><strong><i class="fa fa-exclamation-triangle" aria-hidden="true"></i>Attention!</strong>@TempData["msg"]</div>
                                    }

                                    <div class="row">


                                        <div class="col-xl-6">
                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                            @Html.HiddenFor(model => model.NoteDeFraisID)
                                            @Html.HiddenFor(model => model.Statut)

                                            <div class="form-group">

                                                <label>Date de dépot <i class="fa fa-calendar"></i> </label>
                                                @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control", @name = "date_entr", @id = "d_entre", @required = "Date de debut " } })
                                                @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
                                                <!----input type="date" class="form-control" name="date_entr" id="d_entre" required placeholder="Date de debut "-->
                                            </div>
                                        </div>

                                    </div>
                                    <div class="row">
                                        <div class="col-xl-6">
                                            <div class="form-group">
                                                <label>Type de frais:</label>
                                                @Html.DropDownListFor(model => model.Type, new SelectList(new string[] { "Frais de déplacements", "Frais de séjours" }, "Frais de séjours"), htmlAttributes: new { @class = "form-control" })

                                                @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })

                                            </div>
                                        </div>



                                        <div class="col-xl-6">
                                            <div class="form-group">
                                                <label>Montant (en DT):</label>
                                                @Html.EditorFor(model => model.Montant, new { htmlAttributes = new { @class = "form-control", @name = "date_anc", @id = "d_ancien", @required = "Date de fin" } })
                                                @Html.ValidationMessageFor(model => model.Montant, "", new { @class = "text-danger" })

                                            </div>
                                        </div>
                                        <div class="col-xl-6">
                                            <div class="form-group">
                                                <label>
                                                    Nombre d'invités:
                                                </label>
                                                @Html.EditorFor(model => model.nbrper, new { htmlAttributes = new { @class = "form-control", @name = "date_anc", @id = "d_ancien", @required = "Date de fin" } })
                                                @Html.ValidationMessageFor(model => model.nbrper, "", new { @class = "text-danger" })

                                            </div>
                                        </div>
                                        <div class="col-xl-6">
                                            <div class="form-group">
                                                <label>Informations supplémentaires</label>
                                                @Html.TextAreaFor(model => model.CommentaireF, 5, 40, new { @class = "form-control", @name = "comm", @id = "comm_col", })
                                                @Html.ValidationMessageFor(model => model.CommentaireF, "", new { @class = "text-danger" })


                                                <!----textarea type="" class="form-control" id="comm_col" cols="40" rows="5" name="comm" required placeholder="Votre commentaire..."></!--textarea-->
                                            </div>

                                        </div>
                                    </div>

                                    <div class="col-lg-9 col-xl-6">
                                        <div class="kt-avatar kt-avatar--outline" id="kt_user_avatar_1">

                                            <label class="kt-avatar__upload" data-toggle="kt-tooltip" title="" data-original-title="Ajouter un justificatif">
                                                <i class="flaticon-attachment"></i>
                                                @Html.EditorFor(model => model.Justificatif, new { htmlAttributes = new { @type = "file", @name = "Justificatif", @accept = "image/*" } })
                                                @Html.ValidationMessageFor(model => model.Justificatif)
                                                @Html.HiddenFor(model => model.Justificatif)

                                                <input type="file" name="Justificatif" accept="image/*">
                                            </label>
                                            <span class="kt-avatar__cancel" data-toggle="kt-tooltip" title="" data-original-title="Annuler l'ajout">
                                                <i class="fa fa-times"></i>
                                            </span>
                                        </div>
                                        <span class="form-text text-muted">Ajouter un justificatif depuis votre ordinateur.</span>

                                    </div>

                                </div>
                            </div>
                        </div>

                        <!--end: Form Wizard Step 1-->
                        <!--begin: Form Wizard Step 5-->
                        <!--end: Form Wizard Step 5-->
                        <!--begin: Form Wizard Step 6-->
                        <div class="kt-wizard-v2__content" data-ktwizard-type="step-content">
                            <div class="kt-heading kt-heading--md">validation</div>
                            <div class="kt-form__section kt-form__section--first">
                                <div class="kt-wizard-v2__review">
                                    <div class="kt-wizard-v2__review-item">
                                        <div class="kt-wizard-v2__review-title">
                                            Note de frais
                                        </div>
                                        <div class="kt-wizard-v2__review-content" id="inf_gen">

                                        </div>
                                    </div>




                                </div>
                            </div>
                        </div>

                        <!--end: Form Wizard Step 6-->
                        <!--begin: Form Actions -->
                        @using (Html.BeginForm())
                        {
                        <div class="kt-form__actions">
                            <input type="hidden" asp-for="NoteDeFrais.NoteDeFraisID" />

                            <button class="btn btn-success btn-md btn-tall btn-wide kt-font-bold kt-font-transform-u" data-ktwizard-type="submit">
                                Modifier
                            </button>

                            <input type="button" style="margin-left: 400px;" class="btn btn-success btn-md  btn-wide kt-font-bold kt-font-transform-u mb-2" value="Précédent" onclick="location.href='@Url.Action("Index", "Frais" )'" />


                        </div>
                        }
                        <!--end: Form Actions -->
                        <!----/form-->
                    </div>




                    <!--end: Form Wizard Form-->
                </div>
            </div>
        </div>
    </div>

</div>
}
