@model IEnumerable<SIRHCoreDomain.NoteDeFrais>

    @{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <h1></h1>

    <div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">
        <div class="kt-heading kt-heading--md">
            <center> <h1><font color="#273746">Consulter votre notes de frais </font></h1> </center>
        </div>
        <div class="kt-portlet">
            <div class="kt-portlet__body kt-portlet__body--fit">
                <div class="kt-grid  kt-wizard-v2 kt-wizard-v2--white" id="kt_wizard_v2" data-ktwizard-state="step-first">
                    <div class="kt-grid__item kt-wizard-v2__aside">
                        <div>
                            <div><div><p><label>    </label></p></div></div>
                        </div>

                        <form class="form-inline">
                            <div>
                                <div><div><p><label>    </label></p></div></div>
                            </div>
                            <div class="form-group mb-2">
                                <label class="form-group mx-sm-3 mb-2">Statut:</label>

                            </div>
                            <div class="form-group mx-sm-3 mb-2">

                                <input type="Text" class="form-control" name="search" placeholder="Filtrer selon le statut">


                            </div>
                            <button type="submit" class="btn btn-success btn-md  btn-wide kt-font-bold kt-font-transform-u mb-2 ">Filtrer</button>
                        </form>

                        <div>
                            <div><div><p></p></div></div>
                        </div>
                        <div>
                            <div><div><p><label>    </label></p></div></div>
                        </div>

                        <table class="table table-striped">
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col"> ID </th>
                                    <th scope="col"> Type</th>
                                    <th scope="col"> Statut</th>
                                    <th scope="col"> Actions</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NoteDeFraisID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Type)
                                    </td>
                                   
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Statut)
                                    </td>

                                    <td>

                                        <i class="fa fa-trash" title="Supprimer" style="font-size:20px;color:#48C9B0;" onclick="location.href='@Url.Action("Delete", "Frais" , new { id=item.NoteDeFraisID })'"></i>



                                        <i class="fa fa-pen" title="Modifier" style="font-size:20px;color:#48C9B0;" onclick="location.href='@Url.Action("Edit", "Frais" , new { id=item.NoteDeFraisID })'"></i>
                                        <i class="fa fa-info" title="Details" style="font-size:20px;color:#48C9B0;" onclick="location.href='@Url.Action("Details", "Frais" , new { id=item.NoteDeFraisID })'"></i>



                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>

    </div>
